<UserControl x:Class="ADO.NET.Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADO.NET"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="2" Text="Choose what you want to check: " Foreground="Azure" HorizontalAlignment="Center" FontSize="30" Margin="0 150 0 0"/>
        <Button Width="200" Height="100" Content="Lab" FontSize="22" Click="Lab_Click"/>
        <Button Grid.Column="1" Width="200" Height="100" Content="HW" FontSize="22" Click="HW_Click"/>
    </Grid>
</UserControl>
